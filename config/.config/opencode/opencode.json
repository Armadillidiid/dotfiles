{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": false,
  "instructions": [
    ".github/copilot-instructions.md",
    ".github/instructions/*.md",
    ".agents/*.md",
    "~/.config/opencode/rules/*.md"
  ],
  "keybinds": {
    "command_list": "ctrl+p,<leader>p"
  },
  "agent": {
    "explain": {
      "description": "A concise explainer agent for short snippets. Provides clear, minimal explanations without unnecessary detail.",
      "mode": "primary",
      "model": "github-copilot/gpt-5-mini",
      "prompt": "You are a concise explainer. When given code, text, or a short question, respond briefly and clearly in under 100 words. Avoid filler, repetition, and long paragraphs. Focus on the essential idea only.",
      "tools": {
        "write": false,
        "edit": false
      }
    }
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "Bearer {env:P_CONTEXT7_API_KEY}"
      }
    },
    "gh_grep": {
      "type": "remote",
      "url": "https://mcp.grep.app"
    },
    "github": {
      "type": "remote",
      "url": "https://api.githubcopilot.com/mcp/",
      "enabled": false
    },
    "figma": {
      "type": "local",
      "command": [
        "pnpm",
        "dlx",
        "figma-developer-mcp",
        "--figma-api-key={env:P_FIGMA_API_KEY}",
        "--stdio"
      ]
    },
    "sentry": {
      "type": "local",
      "command": [
        "pnpm",
        "dlx",
        "@sentry/mcp-server@latest",
        "--access-token={env:P_SENTRY_API_KEY}"
      ],
      "enabled": false
    },
    "playwright": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "-i",
        "--rm",
        "--init",
        "--network=host",
        "mcr.microsoft.com/playwright/mcp"
      ],
      "enabled": true
    }
  }
}
